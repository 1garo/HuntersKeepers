<p id="notice"><%= notice %></p>

<h1>Fates</h1>

<table>
  <thead>
    <tr>
      <th>Hunter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fates.each do |fate| %>
      <tr>
        <td><%= fate.hunter_id %></td>
        <td><%= link_to 'Show', fate %></td>
        <td><%= link_to 'Edit', edit_fate_path(fate) %></td>
        <td><%= link_to 'Destroy', fate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fate', new_fate_path %>
