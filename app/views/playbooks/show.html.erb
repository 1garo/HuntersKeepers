<div class="columns">
  <div class="column">
    <h1 class="title"><%= @playbook.name %></h1>
    <p class="is-italic"><%= @playbook.description %></p>
    <h4 class="subtitle" style="margin-top:1rem; margin-bottom:.5rem">Ratings Options</h4>
    <ul>
      <% @playbook.ratings.each do |rating| %>
        <li><%= display_rating(rating) %></li>
      <% end %>
    </ul>
    <%= link_to 'Edit', edit_playbook_path(@playbook) %> |
    <%= link_to 'Back', playbooks_path %>
  </div>
  <div class="column">
    <h4 class="subtitle">Moves</h4>
    <%= render "moves/moves", moves: @playbook.moves, hunter: nil %>
  </div>
  <div class="column">
    <h4 class="subtitle">Gear</h4>
    <%= render "gears/gears", gears: @playbook.gears %>
  </div>
</div>
